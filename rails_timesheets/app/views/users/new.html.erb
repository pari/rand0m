


<% form_for @user, :url=>{:action => "create_user"} do |form| %>  
<%= form.error_messages %>  

<table border="0" cellspacing="5" cellpadding="5">
	<tr><th colspan=2 align='center'><H2>Create New User</H2></th></tr>
	<tr>
		<td align='right'><%= form.label :username, "Username" %></td>
		<td><%= form.text_field :username %></td>
	</tr>
	<tr>
		<td align='right'><%= form.label :email, "Email" %></td>
		<td><%= form.text_field :email %></td>
	</tr>
	<tr>
		<td align='right' valign='top'>Is a Client:</td>
		<td><%= check_box_tag "user[isclient]", '1' %></td>
	</tr>
	<tr>
		<td align='right'><%= form.label :password, "Password" %></td>
		<td><%= form.password_field :password %></td>
	</tr>
	<tr>
		<td align='right'><%= form.label :password_confirmation, "Password confirmation" %></td>
		<td><%= form.password_field :password_confirmation %></td>
	</tr>
	<tr>
		<td><%= link_to "Back", :controller => "users", :action => "index" %></td>
		<td align='center'><%= form.submit "Create" %></td>
	</tr>
</table>
<% end %>