
<% form_for @task, :url=>{:action => "create"} do |form| %>  
<%= form.error_messages %>  

<table border="0" cellspacing="5" cellpadding="5">
	<tr><th colspan=2 align='center'><H2>Add a Task</H2></th></tr>
	<tr>
		<td align='right'><%= form.label :name, "Description :" %></td>
		<td><%= form.text_field :name, :size => 40 %></td>
	</tr>
	<tr>
		<td align='right' valign='top'><%= form.label :notes, "Notes :" %></td>
		<td><%= form.text_area :notes , :rows => 4 , :cols => 40 %></td>
	</tr>
	<tr>
		<td align='right'><%= form.label :minutes, "Time Spent :" %></td>
		<td><%= form.text_field :minutes %> mins</td>
	</tr>
	<tr>
		<td align='right'>Project :</td>
		<td><%= collection_select(:task, :project_id, current_user().projects, :id, :name, {:prompt => true}) %></td>
	</tr>
	<tr>
		<td align='right'>User :</td>
		<td><%= collection_select(:task, :user_id, current_user().peers, :id, :username, {:prompt => true}) %></td>
	</tr>
	<tr>
		<td align='right'>Task Date :</td>
		<td>
			<%= calendar_date_select :task, :tday , :valid_date_check => "date <= (new Date()).stripTime()", :size => 14 %>
		</td>
	</tr>
	<tr>
		<td><%= link_to "Back", :controller => "tasks", :action => "index" %></td>
		<td align='center'><%= form.submit "Create" %></td>
	</tr>
</table>
<% end %>
