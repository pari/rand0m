<h1>Listing buyers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Phone1</th>
    <th>Phone2</th>
    <th>Isactive</th>
  </tr>

<% @buyers.each do |buyer| %>
  <tr>
    <td><%= link_to buyer.name, edit_buyer_path(buyer) %></td>
    <td><%=h buyer.address %></td>
    <td><%=h buyer.phone1 %></td>
    <td><%=h buyer.phone2 %></td>
    <td><%=h buyer.isActive %></td>
    <td><%= link_to 'History', buyer_transactions_path(buyer) %> | 
        <%= link_to 'New Sale', new_buyer_transaction_path(buyer) %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New buyer', new_buyer_path %>